extends layout

block content

  .container
      .jumbotron.text-center
        h1
          span.fa.fa-lock
          |  Node Authentication
        if !user  
          a.btn.btn-default(href='/login')
            span.fa.fa-user
            |  Local Login    
          a.btn.btn-default(href='/signup')
            span.fa.fa-user
            |  Local Signup
          p Login or Register with:
          a.btn.btn-primary(href='/auth/facebook')
            span.fa.fa-facebook
            |  Facebook
        else
          a.btn.btn-default(href='/profile')
            span.fa.fa-user
            |  Profile 