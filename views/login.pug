extends layout

block content

  .container
      .col-sm-6.col-sm-offset-3
        h1
          span.fa.fa-sign-in
          |  Login
        // show any messages that come back with authentication
        if message.length > 0
          .alert.alert-danger #{message}
        
        // LOGIN FORM
        form(action='/login', method='post')
          .form-group
            label Email
            input.form-control(type='text', name='email')
          .form-group
            label Password
            input.form-control(type='password', name='password')
          button.btn.btn-warning.btn-lg.btn-block(type='submit') Login
          p Login or Register with:
          a.btn.btn-primary.btn-lg.btn-block(href='/auth/facebook', class='facebook')
            span.fa.fa-facebook
            |  Facebook
          a.btn.btn-primary.btn-lg.btn-block(href='/', class='twitter')
            span.fa.fa-twitter
            |  Twitter  
        hr
        p
          | Need an account? 
          a(href='/signup') Signup
        p
          | Or go 
          a(href='/') home
          | .