extends layout

block content

  .container
      .col-sm-6.col-sm-offset-3
        h1
          span.fas.fa-sign-in-alt
          |  Login
        // show any messages that come back with authentication
        if message.length > 0
          .alert.alert-danger #{message}
        
        // LOGIN FORM
        form(action='/login', method='post')
          .form-group
            label Email
            input.form-control(type='text', name='email', placeholder='Email')
          .form-group
            label Password
            input.form-control(type='password', name='password', placeholder='Password')
          button.btn.btn-warning.btn-lg.btn-block(type='submit') Login
          p Login or Register with:
          a.btn.btn-primary.btn-lg.btn-block(href='/auth/facebook', class='facebook')
            span.fab.fa-facebook-f
            |  Facebook
          a.btn.btn-primary.btn-lg.btn-block(href='/', class='twitter')
            span.fab.fa-twitter
            |  Twitter  
        hr
        p
          | Need an account? 
          a(href='/signup') Signup