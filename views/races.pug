extends layout

block content

  .container
        h1 Races
        div #{user._id}
        ul
          each race in races
            li= race.Name

        button.btn.btn-link.fas.fa-plus(type='button', data-toggle='modal', data-target='#exampleModal', data-whatever='@mdo') 
        .modal.fade(id='exampleModal', tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
          .modal-dialog(role='document')
            .modal-content
              .modal-header
                h5#exampleModalLabel.modal-title New Race
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                  span(aria-hidden='true') Ã—
              .modal-body
                form
                  .form-group
                    label.col-form-label(for='Name') Name:  
                    a.tooltip-test.fas.fa-info-circle(href='#', title='Name of the race')
                    input#recipient-name.form-control(type='text')
                  .form-group
                    label.col-form-label(for='Secret') Secret:
                    a.tooltip-test.fas.fa-info-circle(href='#', title='Secret is used to participate in the event')
                    input#recipient-name.form-control(type='text')
              .modal-footer
                button.btn.btn-secondary(type='button', data-dismiss='modal') Close
                button.btn.btn-primary(type='button') Add